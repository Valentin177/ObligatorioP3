@model PlataformaMVC.Models.UsuarioViewModel

@{
    ViewData["Title"] = "Iniciar Sesion";
}

<span class="text-danger"> @ViewBag.Error </span>

<h2> Iniciar sesion </h2>

<div class="row">
    <div class="col-4">
        <form class="form-control" asp-action="Login">
            <div class="form-group">
                <label asp-for="ElUsuario.alias" class="control-label"> Ingrese Usuario: </label>
                <input asp-for="ElUsuario.alias" class="form-control" required/>
                <span asp-validation-for="ElUsuario.alias" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ElUsuario.password" class="control-label"> Ingrese Password: </label>
                <input asp-for="ElUsuario.password" type="password" class="form-control" required />
                <span asp-validation-for="ElUsuario.password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
