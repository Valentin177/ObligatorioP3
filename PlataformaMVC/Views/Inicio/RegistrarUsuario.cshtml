@model UsuarioViewModel;


@{
    ViewData["Title"] = "Registro de Usuario";
}

<span class="text-danger"> @ViewBag.Error </span>

<h2> Registro de Usuario </h2>

<div class="row">
    <div class="col-4">
        <form class="form-control" asp-action="RegistrarUsuario">
            <div class="form-group">
                <label asp-for="ElUsuario.alias" class="control-label"> Ingrese su nombre de usuario: </label>
                <input asp-for="ElUsuario.alias" class="form-control" required />
                <span asp-validation-for="ElUsuario.alias" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ElUsuario.password" class="control-label"> Ingrese su contrasenia: </label>
                <input asp-for="ElUsuario.password" type="password" class="form-control"  required />
                <span asp-validation-for="ElUsuario.password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="validacionPassword" class="control-label"> Ingrese su contrasenia: </label>
                <input asp-for="validacionPassword" type="password" class="form-control" required />
                <span asp-validation-for="validacionPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="RegistrarUsuario" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

