@model IEnumerable<LogicaNegocio.Dominio.Ecosistema>

@if(Model.Count() == 0){
    <h1>Actualmente no hay ecosistemas.</h1>
}

@if(Model.Count() > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.nombreEcosistema.nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.descEco)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.estado)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.area)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.nombreEcosistema.nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.descEco.desc)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.estado.nombreEstado)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.area)
                    </td>
                </tr>
            }
        </tbody>
    </table>
   
    
}
<br />
<p> <a asp-action="CrearEcosistema"> Crear un Ecosistema</a> </p>
